---
const { name, image, infoUrl } = Astro.props;
---

<div class="card">
  <a href={infoUrl} target="_blank" rel="noopener noreferrer">
    <div class="image-container">
      <img src="{image}" alt="{name}" />
    </div>
  </a>
</div>

<style>
  .card {
    border: 1px solid #ddd;
    border-radius: 4px;
    overflow: hidden;
    width: 100%;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease;
  }

  .card:hover {
    transform: scale(1.05);
  }

  .image-container {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .name {
    background-color: #000;
    color: #fff;
    padding: 10px 0;
    font-size: 1.2em;
    font-weight: bold;
  }
</style>
