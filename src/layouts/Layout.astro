<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/image.png" />
    <meta name="generator" content={Astro.generator} />
    <title>GENTE DEL TANQUE</title>
  </head>
  <body class="light-mode">
    <header>
      <button id="theme-toggle"> ðŸŒ™ Dark </button>
    </header>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    background-color: #fff;
    color: #000;
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--bg-color);
    color: var(--text-color);
    transition:
      background-color 0.3s,
      color 0.3s;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    background-color: var(--bg-color);
    color: var(--text-color);
    transition:
      background-color 0.3s,
      color 0.3s;
  }

  button {
    padding: 5px 10px;
    border: none;
    cursor: poiner;
    background-color: var(--bg-color);
    color: var(--text-color);
    border-radius: 5px;
    transition:
      background-color 0.3s,
      color 0.3s;
  }

  @media (prefers-color-sheme: dark) {
    body {
      background-color: #1a1a1a;
      color: #fff;
    }
  }

  /* ligth mode */
  :root {
    --bg-color: #fff;
    --text-color: #000;
    --button-bg: #f0f0f0;
    --button-text: #000;
  }

  /* dark mode */
  .dark-mode {
    --bg-color: #1a1a1a;
    --text-color: #fff;
    --button-bg: #333;
    --button-text: #fff;
  }
</style>

<script>
  //alternar de modo
  const toggleButton = document.getElementById("theme-toggle");
  const body = document.body;

  // al cagar la pagina aplica el modo guardado en localStore
  document.addEventListener("DOMContentLoaded", () => {
    const savedTheme = localStorage.getItem("theme");
    if (savedTheme === "dark") {
      body.classList.add("dark-mode");
      if (toggleButton) {
        toggleButton.textContent = "ðŸŒž Light";
      }
    }
  });

  toggleButton?.addEventListener("click", () => {
    body.classList.toggle("dark-mode");
    const isDarkMode = body.classList.contains("dark-mode");
    toggleButton.textContent = isDarkMode ? "ðŸŒž Light" : "ðŸŒ™ Dark";
    localStorage.setItem("theme", isDarkMode ? "dark" : "light");
  });
</script>
